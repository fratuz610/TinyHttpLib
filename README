HttpRequest req = new HttpRequest()
                        .withMethod(Get.class)
                        .withURL("http://hello.com")
                        .withTimeout(30)
                        .withFollowRedirects();
                        .withHeader(string key, string val)
                        .withParam(new FileUploadParam(File file)) // If we want to upload a file
                        .withParam(String key, String value) // usual param passing
                        .withParam(String rawData) // if you need to do SOAP or RESTFul POST/PUT calls
                        
// If we expect the response to be a string
TextResponse resp = new HttpCall<TextResponse>(req).call();

// If we need to use a proxy (only Basic AUTH is supported)
TextResponse resp = new HttpCall<TextResponse>(req)
                        .withProxy("username:password@address:port")
                        .withProxy("address:port")
                        .call();

// TextResponse Object
resp.getResponseCode();
resp.getResponseType();
resp.getResponseLength();
resp.getResponseHeaders(); // List of "KeyValuePair"
resp.getText(); 

// if ByteArrayResponse
resp.getResponseCode();
resp.getResponseType();
resp.getResponseLength();
resp.getResponseHeaders(); // List of "KeyValuePair"
resp.getByteArray(); 
resp.getByteArrayInputStream(); 

// if FileResponse
resp.getResponseCode();
resp.getResponseType();
resp.getResponseLength();
resp.getResponseHeaders(); // List of "KeyValuePair"
resp.getByteArray(); 
resp.getByteArrayInputStream();